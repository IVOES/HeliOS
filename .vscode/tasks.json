{
    "tasks": [
        {
            "type": "shell",
            "label": "HeliOS Test (build/gcc)",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${workspaceFolder}/src",
                "-DCONFIG_ENABLE_SYSTEM_ASSERT",
                "-DPOSIX_ARCH_OTHER",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "${workspaceFolder}/src/*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}